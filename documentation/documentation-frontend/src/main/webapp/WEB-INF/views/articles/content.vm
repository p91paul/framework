#parse("/shared/framework.vm")

#if ($category)
    <div class="row">
        <div class="col-sm-9">
            $article.content
        </div>
        <div class="col-sm-3 side-navigation">
            <h2>$category.title</h2>

            <ol>
                #foreach ($article in $category.articles)
                    <li><a href="#/articles/view/$article.code">$article.title</a></li>
                #end
            </ol>

            #if ($parent)
                #foreach ($child in $parent.children)
                    #if ($child.id != $category.id)
                        <h2>$child.title</h2>

                        <ol>
                            #foreach ($article in $child.articles)
                                <li><a href="#/articles/view/$article.code">$article.title</a></li>
                            #end
                        </ol>
                    #end
                #end
            #end
        </div>
    </div>
#else
    $article.content
#end
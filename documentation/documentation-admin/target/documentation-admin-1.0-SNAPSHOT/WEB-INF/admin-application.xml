<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.2.xsd
			http://www.springframework.org/schema/mvc 
			http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
	
	<context:annotation-config />

    <context:component-scan base-package="  applica.framework.library,
                                            applica.framework.fileserver,
	                                        applica.documentation.domain,
	                                        applica.documentation.admin" />

	<mvc:annotation-driven />

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
	    <property name="basename" value="messages/messages" />
	</bean>
	
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
	    <property name="defaultLocale" value="it" />
	</bean>
	
	<mvc:interceptors>
	    <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
	        <property name="paramName" value="lang" />
	    </bean>
	</mvc:interceptors>

	<bean class="applica.documentation.admin.Bootstrapper" init-method="init" lazy-init="false"></bean>
    <bean class="applica.framework.library.velocity.BaseVelocityBuilder" />
    <bean class="applica.framework.library.cache.MemoryCache" />
    <bean class="applica.framework.library.options.PropertiesOptionManager" />
	
</beans>
